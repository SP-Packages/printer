{
  "TOOLS": {
    "COMPOSER_AUDIT": {
      "title": "Auditing PHP Dependencies",
      "command": "audit",
      "type": "composer",
      "behavior": "warn",
      "priority": 4
    },
    "COMPOSER_INSTALL": {
      "title": "Installing PHP Dependencies",
      "command": "install",
      "args": ["--no-scripts"],
      "type": "composer",
      "behavior": "error",
      "priority": 3
    },
    "COMPOSER_OUTDATED": {
      "title": "Outdated PHP Dependencies",
      "command": "outdated",
      "type": "composer",
      "behavior": "warn",
      "priority": 6
    },
    "COMPOSER_UPDATE": {
      "title": "Update PHP Dependencies",
      "command": "update",
      "type": "composer",
      "behavior": "warn",
      "priority": 5
    },
    "COMPOSER_VERIFY": {
      "title": "Verifying Composer Dependencies",
      "command": "validate",
      "args": ["--no-interaction", "--strict"],
      "type": "composer",
      "behavior": "error",
      "priority": 2
    },
    "COMPOSER_VERSION": {
      "title": "Checking Composer version",
      "command": "info",
      "args": ["--version"],
      "type": "composer",
      "behavior": "error",
      "priority": 1
    },
    "DEPCHECK": {
      "title": "Depcheck NPM Packages",
      "prefix": "npx",
      "command": "depcheck",
      "type": "npm",
      "behavior": "warn",
      "requires": "depcheck",
      "priority": 10
    },
    "NPM_AUDIT": {
      "title": "Auditing NPM Packages",
      "command": "audit",
      "type": "npm",
      "behavior": "warn",
      "priority": 11
    },
    "NPM_INSTALL": {
      "title": "Installing NPM Packages",
      "command": "install",
      "type": "npm",
      "behavior": "error",
      "priority": 9
    },
    "NPM_OUTDATED": {
      "title": "Outdated NPM Packages",
      "command": "outdated",
      "type": "npm",
      "behavior": "warn",
      "priority": 13
    },
    "NPM_UPDATE": {
      "title": "Update NPM Packages",
      "command": "update",
      "type": "npm",
      "behavior": "warn",
      "priority": 12
    },
    "NPM_VERIFY": {
      "title": "Verifying NPM Package",
      "prefix": "npx",
      "command": "npmPkgJsonLint .",
      "type": "npm",
      "behavior": "error",
      "requires": "npm-package-json-lint",
      "priority": 8
    },
    "NPM_VERSION": {
      "title": "Checking NPM version",
      "prefix": "npm",
      "command": "info",
      "args": ["--version"],
      "type": "npm",
      "behavior": "error",
      "priority": 7
    }
  }
}
