{
  "name": "@sp-packages/printer",
  "description": "A lightweight CLI tool and Node.js module for formatted console output.",
  "version": "2.10.3",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Senthilprabu Ponnusamy",
    "email": "info@senthilprabu.in",
    "url": "https://www.senthilprabu.in"
  },
  "funding": "https://github.com/sponsors/iamsenthilprabu",
  "keywords": [
    "printer",
    "console",
    "formatting",
    "text"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SP-Packages/printer.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "printer": "dist/bin/index.js"
  },
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "depcheck": {
    "ignores": [
      "codecov",
      "conventional-changelog-conventionalcommits",
      "cspell",
      "depcheck",
      "husky",
      "markdownlint-cli",
      "semantic-release",
      "@commitlint/cli",
      "@commitlint/config-conventional",
      "@semantic-release/changelog",
      "@semantic-release/commit-analyzer",
      "@semantic-release/exec",
      "@semantic-release/git",
      "@semantic-release/npm",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@sp-packages/cspell-dictionary",
      "@sp-packages/depkit",
      "@sp-packages/lintrc",
      "@types/node",
      "@vitest/coverage-v8"
    ]
  },
  "lint-staged": {
    "*": [
      "npx lintrc"
    ]
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "ora": "^8.2.0",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.33.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@sp-packages/cspell-dictionary": "^1.2.48",
    "@sp-packages/depkit": "^2.4.3",
    "@sp-packages/lintrc": "^1.5.3",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.0.8",
    "codecov": "^3.8.3",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "cspell": "^9.0.2",
    "depcheck": "^1.4.7",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jsdoc": "^54.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.0.8"
  },
  "scripts": {
    "build": "tsc && esbuild dist/**/*.js --minify --outdir=dist --allow-overwrite --tree-shaking=true --platform=node",
    "postinstall": "husky install",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  }
}
