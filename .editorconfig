# Top-most EditorConfig file
root = true

# General settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# TypeScript
[*.ts]
quote_type = double

# Markdown files
[*.md]
max_line_length = 80
